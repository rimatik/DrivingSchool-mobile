<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home">


                <GridLayout
                    android:rowCount="2"
                    android:columnCount="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="84dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout>
                        <TextView
                            android:text="Ucenje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                           android:layout_below="@+id/ivUcenje"
                            android:layout_centerHorizontal="true"
                            android:textSize="17dp"/>

                        <ImageView
                            android:layout_gravity="fill_horizontal"
                            android:src="@drawable/notes"
                             android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:id="@+id/ivUcenje"

                            />
                    </RelativeLayout>

                    <RelativeLayout>
                        <TextView
                            android:text="Ispiti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/ivIspiti"
                            android:layout_centerHorizontal="true"
                            android:textSize="17dp"/>
                        <ImageView
                            android:src="@drawable/ispiti"
                            android:id="@+id/ivIspiti"
                            android:padding="10dp"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:layout_gravity="fill_horizontal"
                            />

                       </RelativeLayout>


                    <RelativeLayout>
                        <TextView
                            android:text="Postavke"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/ivSettings"
                            android:layout_centerHorizontal="true"
                            android:textSize="17dp"/>

                        <ImageView
                            android:layout_gravity="fill_horizontal"
                            android:src="@drawable/postavke"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:padding="10dp"
                            android:id="@+id/ivSettings"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                    <RelativeLayout>
                        <TextView
                            android:text="Informacije"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/ivInfo"
                            android:layout_centerHorizontal="true"
                            android:textSize="17dp"/>

                        <ImageView

                            android:layout_gravity="fill_horizontal"
                            android:src="@drawable/info"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:padding="5dp"

                            android:id="@+id/ivInfo"

                            />
                    </RelativeLayout>



                </GridLayout>









<ImageView
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:src="@drawable/ikona"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</RelativeLayout>
